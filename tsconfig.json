{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true, // ts import
    "esModuleInterop": true, // ts import
    "declaration": true,
    "experimentalDecorators": true, // 修饰器
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*", "typings"],
  "exclude": ["../../node_modules"]
}
